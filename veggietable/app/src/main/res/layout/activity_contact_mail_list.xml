<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color1"
    android:orientation="vertical"
    tools:context=".ContactMailListActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/radius_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@color/white">
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/transparent"
            android:src="@drawable/ic_back" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="문의하기"
            />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:textAlignment="center"
        android:text="메일을 보낼 문의처를 선택하세요." />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mailitem1"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="90dp">
            <TextView
                android:id="@+id/mailname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="국민동의청원"
                android:textSize="20sp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/mailaddress1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="e-petitions@assembly.go.kr"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/mailname1"
                app:layout_constraintTop_toBottomOf="@+id/mailname1" />
            <ImageButton
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/btn_mail"
                android:src="@drawable/ic_mail"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:id="@+id/mailitem2"
            android:layout_height="90dp">
            <TextView
                android:id="@+id/mailname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="대한민국 국회"
                android:textSize="20sp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/mailaddress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="webmaster@assembly.go.kr"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/mailname2"
                app:layout_constraintTop_toBottomOf="@+id/mailname2" />
            <ImageButton
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/btn_mail"
                android:src="@drawable/ic_mail"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:id="@+id/mailitem3"
            android:layout_height="90dp">
            <TextView
                android:id="@+id/mailname3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="국회 데이터 활용 운영사무국"
                android:textSize="19sp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/mailaddress3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="datacontest2022@assembly.go.kr"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/mailname3"
                app:layout_constraintTop_toBottomOf="@+id/mailname3" />
            <ImageButton
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/btn_mail"
                android:src="@drawable/ic_mail"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</LinearLayout>