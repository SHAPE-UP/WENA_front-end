<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color1"
    android:orientation="vertical"
    tools:context=".ContactCallListActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/radius_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@color/white">
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/transparent"
            android:src="@drawable/ic_back" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="문의하기"
            />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:textAlignment="center"
        android:text="통화할 문의처를 선택하세요." />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/callitem1"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="90dp">
            <TextView
                android:id="@+id/callname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="국회민원 (청원)"
                android:textSize="20sp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/callnumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02-6788-0081"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/callname1"
                app:layout_constraintTop_toBottomOf="@+id/callname1" />
            <ImageButton
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/btn_call"
                android:src="@drawable/ic_call"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:id="@+id/callitem2"
            android:layout_height="90dp">
            <TextView
                android:id="@+id/callname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="국회민원 (진정)"
                android:textSize="20sp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/callnumber2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02-6788-2453"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/callname2"
                app:layout_constraintTop_toBottomOf="@+id/callname2" />
            <ImageButton
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/btn_call"
                android:src="@drawable/ic_call"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</LinearLayout>